<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_location_default"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:key="@string/pref_temperature_key"
        android:title="@string/pref_temperature_label"
        android:defaultValue="@string/pref_temperature_metric"
        android:entryValues="@array/pref_temperature_unit_values"
        android:entries="@array/pref_temperature_unit_options"/>
</PreferenceScreen>
